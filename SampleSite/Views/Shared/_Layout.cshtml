
<!DOCTYPE html>

<html>
<body>
    <a href="@Url.RouteUrl("home")">Home</a>
    <a href="@Url.RouteUrl("Posts")">Posts</a>
    @if (User.Identity.IsAuthenticated)
    {
        <p>Welcome back, @User.Identity.Name</p>
        <a href="~/Auth/Logout">Logout</a>
        if (User.IsInRole("admin"))
        {
            <a href="@Url.RouteUrl("admin_default")">Admin</a>
        }
    }
    else
    {
        <a href="@Url.RouteUrl("login")">Login</a>
    }
    
    @RenderBody()

    <footer>
        &copy; @DateTime.UtcNow.Year - Zane Degner
    </footer>
</body>
</html>
